<div class="container-fluid">
  <div class="row">
    <h1>Users show</h1>
    <div class="col-xs-12 col-sm-8 col-md-6">
      <div class="panel panel-default">
        <h1>Instante</h1>
        <div class="Profile-info">
          <h1><strong>Image:</strong></h1>
          <div class="profile-img">
          <%= form_with(model: @user, local: true, method: :patch) do |form| %>
            <% if @user.image.present? %>
              <%= image_tag(@user.image.url, class: "img-responsive") if @user.image && @user.image.url %>
              <%= form.hidden_field :image_cache %> 
            <% else %>
              <label class="filelabel" title="Choose file">
              <%= image_tag("logos/image_icon.png", width: '100', height: '100') %>
              <%= form.file_field :image, id: :user_image %>
              <%= image_tag(@user.image.url, class: "img-responsive") if @user.image && @user.image.url %>
              <%= form.hidden_field :image_cache %> 
              </label>
            <% end %>
          <label class="send btn btn-default btn-block">
            <div>
            <%= form.submit "Profile", class: "send"%> Profile Image
            </div>
          </label>
          <% end %> 
          <p>
            <h1>
              <strong>Name:</strong>
              <%= @user.name %>
            </h1>
          </p>
          <p>
            <h1>
              <strong>Email:</strong>
              <%= @user.email %>
            </h1>
          </p>
        </div>
        <button type="button" class="btn btn-success"><%= link_to 'Edit', edit_user_path(@user) %></button> 
        <button type="button" class="btn btn-success"><%= link_to 'Post', new_post_path %></button>
        <button type="button" class="btn btn-success"><%= link_to 'favorites', favorites_path(@user) %></button>
      </div>  
    </div>
  </div>
</div>