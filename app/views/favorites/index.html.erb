
<h1>favorites</h1>
<div class="main container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-3">
    </div>
    <div class="col-xs-12 col-sm-8 col-md-6">
      <ul class="list-inline list-unstyled">
        <% @favorites.each do |favorite| %>
        <div class="stories panel panel-default">
          <div class="post_image">
          <%= favorite.content %>
            <% if favorite.image.present? %>
              <%= image_tag(favorite.image.url, class: "img-responsive") %>
            <% end %>
          </div>
        </div>
        <% if favorite.present? %>
          <%= link_to 'Remove favorite', favorite_path(id: favorite.id), method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <%= link_to 'Favorite', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
        <% end %>
        <li class="right"><%= link_to "Home", posts_path %></li>
        <% end %>  
      </ul>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-3">
    </div>
  </div>
</div>
