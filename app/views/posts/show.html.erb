<header>
  <ul class="panel-header  list-inline list-unstyled "> 
    <li class="h-inst">
      <h1 class="instante">Instante</h1>
    </li>
    <li class="h-search">
    <%= form_with url: "/search", method: :get do |form| %>
    <%= form.text_field :query, placeholder:"Search", class: "search-field" %>
      <i class="bi bi-search"></i><%= form.submit "Search", class: "search-btn" %>
    <% end %>
    </li> 
    <li class="h-icons">
      <li class="right"><i class="bi bi-house-fill"></i><%=link_to "Home", posts_path %></li>
      <li class="right"><i class="bi bi-messenger"></i><%=link_to "Message", posts_path %></li>
      <li class="right"><%=link_to "Random", "#" %></li>
      <li class="right"><i class="bi bi-suit-heart"></i><%=link_to "favorites", "#" %></li>
      <li class="right"><i class="bi bi-person-circle"></i><%=link_to "Profile", users_path %></li>
    </li>
  </ul>
</header>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6">
      <div class="my_post panel panel-default">
        <h3>Post</h3>
      </div>
      <div class="panel panel-default">
        <ul class="list-inline list-unstyled">
          <li><p class="bi bi-person-fill" class="post_username"><%= @post.user.name %></p></li>
          <p class="post_timestamp"><small><%= @post.updated_at.strftime("%Y-%m-%d %H:%M") %></small></p>
          <p class="post_content lead"><%= @post.content %></p>
          <div class="post_image">
            <strong>Image:</strong>
            <% if @post.image.present? %>
              <%= image_tag(@post.image.url, class: "img-responsive") %>
            <% end %>
          </div>
          <div>
            <strong>Title:</strong>
            <%= @post.title %>
          </div>
          <div>
            <strong>Content:</strong>
            <%= @post.content %>
          </div>
          <li class="right">
            <% if current_user.id == @post.user_id %>
              <li class="right"><%= link_to "Edit", edit_post_path(@post.id) %></li>
            <% end %>
          </li>
          <li class="right"><%= link_to "Home", posts_path %></li>
        </ul>
      </div>
    </div>
  </div>
</div>